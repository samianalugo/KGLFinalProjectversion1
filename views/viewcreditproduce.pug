
doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/managerdash.css')
  title View Sales
.container-fluid(action='/viewcreditsale')
  .topbar.d-flex.justify-content-between.align-items-center.p-3
    .logo
      h2 Dashboard
    .d-flex.align-items-center.gap-3
      .search
        input#search.form-control(type='text' placeholder='Search here')
      i.las.la-bell.fs-3
      img(src='../public/img/user.png' alt='user' style='height: 40px;')
  // Main Content
  .col-md-10
    .table-responsive.px-3
      .d-flex.justify-content-between.align-items-center.mt-4.mb-2
        h3.ms-3 Sales Records
        a.btn(href='/addCreditProduce') + Add New credit Sale
      .table-responsive
        table.table.table-bordered.table-striped.text-center.align-middle
          thead
            tr
              th Buyer&apos;s Name
              th National id
              th Name of Produce
              th Location
              th Tonnage(kgs)
              th Amount Due
              th Sales Agent&apos;s name
              th Due Date
              th Dispatch Date
              th Branch
              th Edit 
              th Delete
          tbody
            if Sales.length 
             each item in Sales
              tr
                td #{item.buyername}
                td #{item.nationalid}
                td #{item.prodname.prodname}
                td #{item.location}
                td #{item.quantity}
                td #{item.amountdue}
                td #{item.sellername.fullname}
                td #{item.duedate}
                td #{item.dispatchdate}
                td #{item.branch}
                td
                  a.btn.btn-secondary.btn-block(href=`/editcreditsale/${item._id}`) Edit
                td   
                    form(action=`/deletecreditsale/${item._id}` method='POST' style='display:inline-block; margin-left:5px;')
                     button.btn.btn-sm.btn-danger(type='submit' onclick='return confirm("Are you sure?")') Delete