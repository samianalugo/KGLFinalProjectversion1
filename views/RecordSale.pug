doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/addproduce.css')
  link(rel='stylesheet' href='../css/signin.css')
  title Record Sale
.container
  .form-container
    .header1
      h1 Record Sale
      div
    form(action='/addSale' method='post')
      .main-user-info
        .user-input-box
          label Tonnage(kgs)
          input(type='number' name='quantity' placeholder='Enter quantity')
        .user-input-box
          label Amount Paid
          input(type='number' name='amountprice' placeholder='Enter amount paid')
        .user-input-box
          label Buyer&apos;s name
          input(type='text' name='buyername' placeholder="Enter buyer's name")
        .user-input-box
          label Sales Agent&apos;s name
          input(type='text' name='salesagentname' placeholder="Enter sales agent's name")
        .user-input-box
          label Date
          input(type='date' name='date' placeholder="Enter today's date")
        .user-input-box
          label Time of Produce
          input(type='time' name='time' placeholder='Enter time')
        .gender-details-box
          span.gender-title Name of Produce
          .gender-category
            select.produce(name='produce')
              option(value='')
              option(value='grainmaize') Grain Maize
              option(value='soybeans') Soy Beans
              option(value='cowpeas') Cow Peas
              option(value='gnuts') Gnuts
              option(value='beans') Beans
            br
          div
            button.submit Submit
