
doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/managerdash.css')
  title View Suppliers
.container-fluid(action='/viewsupply')
  .topbar.d-flex.justify-content-between.align-items-center.p-3
    .logo
      h2 Dashboard
    .d-flex.align-items-center.gap-3
      .search
        input#search.form-control(type='text' placeholder='Search here')
      i.las.la-bell.fs-3
      img(src='../public/img/user.png' alt='user' style='height: 40px;')
  // Main Content
  .col-md-10
    .table-responsive.px-3
      .d-flex.justify-content-between.align-items-center.mt-4.mb-2
        h3.ms-3 Suppliers
        a.btn(href='/addSupplier') + Add New Supplier
      .table-responsive
        table.table.table-bordered.table-striped.text-center.align-middle
          thead
            tr
              th Company Name 
              th Location
              th Company Number
              
          tbody
            if Suppliers.length 
             each item in Suppliers
              tr
                td #{item.saletonnage}
                td Ush#{item.unitsellingprice}
                td Ush#{item.amountpaid}
                td #{item.buyername}
                td #{item.sellername}
                td #{item.date}
                td #{item.time}
                td #{item.prodname}
                td
                  a.btn.btn-secondary.btn-block(href=`/editsale/${item._id}`) Edit
                td   
                    form(action=`/deletesale/${item._id}` method='POST' style='display:inline-block; margin-left:5px;')
                     button.btn.btn-sm.btn-danger(type='submit' onclick='return confirm("Are you sure?")') Delete