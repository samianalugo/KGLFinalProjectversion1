doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/managerdash.css')
  script(src='https://cdn.jsdelivr.net/npm/chart.js')
  title Manager Dashboard
.container(action='/managerdash')
  .topbar
    .logo
      h2 Dashboard
    .search
      input#search(type='text' placeholder='search here')
      label(for='search')
        i.las.la-search
    .user
      i.las.la-bell
      img(src='../public/img/user.png' alt='')
  .sidebar
    ul
      li
        a(href='/managerdash')
          i.las.la-th-large
          div Dashboard
      li
        a(href='/addClient')
          i.las.la-users
          div Employees
      li
        a(href= '/viewingsale')
          i.las.la-money-bill
          div View a Sale
      li
        a(href='/addSupplier')
          i.las.la-users
          div Suppliers
      li
        a(href='/viewingstock')
          i.las.la-seedling
          div Add Produce
      li
        a(href='/addPayment')
          i.las.la-money-bill
          div Payments
      li
        a(href='/addClient')
          i.las.la-users
          div Clients
      li
        a(href='/login')
          i.la-sign-out-alt
          div Logout
  .main
    .cards
      .card
        .card-content
          .number 4
          .card-name Employees
        .icon-box
          i.
      .card
        .card-content
          .number 1217
          .card-name Total Stock
        .icon-box
          i.
      .card
        .card-content
          .number 5
          .card-name Products
        .icon-box
          i.
      .card
        .card-content
          .number 1217
          .card-name Profits
        .icon-box
          i.
    .charts
      .chart
        h2 Earnings (past months)
        canvas#lineChart
      #doughnut-chart.chart
        h2 Employees
        canvas#doughnut



script(src='../css/managerdash.js')