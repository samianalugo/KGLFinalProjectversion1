doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
    link(rel='stylesheet' href='../css/signup.css')
    title SignUp
  body
    .container
      h1.form Registration
      form(action='/signingup' method='post')
        .main-user-info
          .user-input-box
            label(for='fullName') Full Name
            input#fullName(type='text' name='fullName' placeholder='Enter your full name' required)

            label(for='email') Email
            input#email(type='email' name='username' placeholder='Enter your email' required)

            label(for='password') Password
            input#password(type='password' name='password' placeholder='Enter your password' required)

            label(for='phoneNumber') Phone Number
            input#phoneNumber(type='number' name='phoneNumber' placeholder='Enter your phone number' required)

        .gender-details-box
          span.gender-title Gender
          .gender-category
            input#male(type='radio' name='gender' value='male' required)
            label(for='male') Male
            input#female(type='radio' name='gender' value='female' required)
            label(for='female') Female

          span.gender-title Role
          .gender-category
            input#director(type='radio' name='role' value='director' required)
            label(for='director') Director
            input#manager(type='radio' name='role' value='manager' required)
            label(for='manager') Manager
            input#salesagent(type='radio' name='role' value='salesagent' required)
            label(for='salesagent') Sales Agent

          span.gender-title Branch
          .gender-category
            input#matugga(type='radio' name='branch' value='Matugga' required)
            label(for='Matugga') Matugga
            input#maganjo(type='radio' name='branch' value='Maganjo' required)
            label(for='Maganjo') Maganjo

        button.submit(type='submit') Submit
        script(src='../css/signup2.js')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
         integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
         crossorigin="anonymous")
