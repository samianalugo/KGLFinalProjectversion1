doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit Produce
    link(rel="stylesheet" href="../css/bootstrap-5.3.3-dist/css/bootstrap.css")
    link(rel="stylesheet" href="../css/addproduce.css")
    link(rel="stylesheet" href="../css/signin.css")
  body
    .container.mt-5
      h2.text-top.mb-4 Edit a Supplier

      form(action=`/editsupplier/${item._id}` method="POST")
        .mb-3
          label.form-label(for="company") Company Name
          input.form-control(type="text", name="company", value=item.company, required)

        .mb-3
          label.form-label(for="phoneNumber") Company number
          input.form-control(type="number", name="phoneNumber", value=item.phoneNumber, required)

        .mb-3
          label.form-label(for="location") Location
          input.form-control(type="text", name="location", value=item.location, required)

          .gender-details-box
            span.gender-title Branch
            .gender-category
              input#matugga(type='radio' name='branch' value=item.branch)
              label(for='Matugga') Matugga
              input#maganjo(type='radio' name='branch' value=item.branch)
              label(for='Maganjo') Maganjo

        button.btn.btn-primary(type="submit") Edit Supplier
        a.btn.btn-secondary.ms-2(href="/viewsupply") Cancel
