html
  head
    title Edit Credit Entry
    link(rel='stylesheet' href='/css/bootstrap-5.3.3-dist/css/bootstrap.css')
  body
    .container
      h1 Edit Credit Produce Entry
      form(action=`/credit/edit/${credit._id}` method='POST')
        label Buyer’s name
        input(type='text', name='buyername', value=credit.buyername)

        label National ID
        input(type='text', name='nationalid', value=credit.nationalid)

        label Location
        input(type='text', name='location', value=credit.location)

        label Tonnage (kgs)
        input(type='number', name='quantity', value=credit.quantity)

        label Amount Due
        input(type='number', name='amountdue', value=credit.amountdue)

        label Sales Agent’s Name
        input(type='text', name='salesagentname', value=credit.salesagentname)

        label Due Date
        input(type='date', name='duedate', value=credit.duedate.toISOString().split('T')[0])

        label Dispatch Date
        input(type='date', name='dispatchdate', value=credit.dispatchdate.toISOString().split('T')[0])

        label Phone Number
        input(type='text', name='phonenumber', value=credit.phonenumber)

        label Type of Produce
        input(type='text', name='typeproduce', value=credit.typeproduce)

        .gender-details-box
            span.gender-title Branch
            .gender-category
              input#matugga(type='radio' name='branch' value=credit.Matugga)
              label(for='Matugga') Matugga
              input#maganjo(type='radio' name='branch' value=credit.Maganjo)
              label(for='Maganjo') Maganjo

        label Name of Produce
        select(name='produce')
          option(value='grainmaize', selected=credit.produce == 'grainmaize') Grain Maize
          option(value='soybeans', selected=credit.produce == 'soybeans') Soy Beans
          option(value='cowpeas', selected=credit.produce == 'cowpeas') Cow Peas
          option(value='gnuts', selected=credit.produce == 'gnuts') Gnuts
          option(value='beans', selected=credit.produce == 'beans') Beans

        button(type='submit') Update
        form(action=`/credit/delete/${credit._id}` method='POST' onsubmit="return confirm('Are you sure you want to delete this entry?');")
  button.btn.btn-danger(type='submit') Delete Entry

