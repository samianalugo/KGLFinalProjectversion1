doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/signup.css')
  link(rel='stylesheet' href='../css/signin.css')
  title Supplier Information
  h1.header KARIBU GROCERIES LIMITED
  hr
.container
  h1.form Register Supplier
  form(action='/addSupplier' method='post')
    .main-user-info
      .user-input-box
        label(for='company') Company Name
        input#company(type='text' name='company' placeholder="Enter supplier's company name")
        label(for='phonenumber') Company Number
        input#phoneNumber(type='number' name='phoneNumber' placeholder="Enter supplier's phone number")
        label(for='location') Location
        input#location(type='text' name='location' placeholder="Enter supplier's location")
    button.submit Submit
