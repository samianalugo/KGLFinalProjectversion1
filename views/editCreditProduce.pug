doctype html
html
  head
    title Edit Credit Entry
    link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
    link(rel='stylesheet' href='../css/addproduce.css')
  link(rel='stylesheet' href='../css/signin.css')
  body
    .container
    .form-container 
    .header1
      h1 Edit Credit Produce Entry
      form(action=`/edit/${credit._id}` method="POST")
        .main-user-info 
        .user-input-box
        label Buyer&apos;s name
        input(type='text' name='buyername' value=credit.buyername placeholder="Buyer's name")
        .user-input-box
          label National id
        input(type='text' name='nationalid' value=credit.nationalid placeholder="National ID")
        .user-input-box
          label Location
        input(type='text' name='location' value=credit.location placeholder="Location")
        .user-input-box
          label Tonnage(kgs)
        input(type='number' name='quantity' value=credit.quantity placeholder="Quantity")
        .user-input-box
          label Amount due
        input(type='number' name='amountdue' value=credit.amountdue placeholder="Amount Due")
        .user-input-box
          label Sales Agent&apos;s name
        input(type='text' name='salesagentname' value=credit.salesagentname placeholder="Sales Agent")
        .user-input-box
          label Due Date
        input(type='date' name='duedate' value=credit.duedate.toISOString().split('T')[0])
        .user-input-box
          label Dispatch Date
        input(type='date' name='dispatchdate' value=credit.dispatchdate.toISOString().split('T')[0])
        .user-input-box
          label(for='phonenumber') Phone Number
        input(type='number' name='phonenumber' value=credit.phonenumber placeholder="Phone Number")
        .user-input-box
          label Type of Produce
        input(type='text' name='typeproduce' value=credit.typeproduce placeholder="Type of Produce")
       span.gender-title(name='branch') Branch
      .gender-category
        input#matugga(type='radio' name='branch' value=credit.Matugga)
        label(for='Matugga') Matugga
        input#maganjo(type='radio' name='branch' value=credit.Maganjo)
        label(for='Maganjo') Maganjo
       .gender-details-box
          span.gender-title Name of Produce
          .gender-category
        select(name='produce')
          option(value='grainmaize' selected=credit.produce=='grainmaize') Grain Maize
          option(value='soybeans' selected=credit.produce=='soybeans') Soy Beans
          option(value='cowpeas' selected=credit.produce=='cowpeas') Cow Peas
          option(value='gnuts' selected=credit.produce=='gnuts') Gnuts
          option(value='beans' selected=credit.produce=='beans') Beans
        button(type="submit") Edit
