doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../css/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='../css/addproduce.css')
  link(rel='stylesheet' href='../css/signin.css')
  title Add Produce
.container
  .form-container
    .header1
      h1 Add Produce
      div
    form(action='/addproduce' method='post')
      .main-user-info
        .user-input-box
          label Type of Produce
          input(type='text' name='typeproduce' placeholder='Add type of produce')
        .user-input-box
          label Tonnage(kgs)
          input(type='number' name='quantity' placeholder='Add quantity')
        .user-input-box
          label Cost Price
          input(type='number' name='costprice' placeholder='Add cost price')
        .user-input-box
          label Selling Price
          input(type='number' name='sellingprice' placeholder='Add selling price')
        .user-input-box
          label Dealer&apos;s name
          input(type='text' name='dealername' placeholder="Add dealer's name")
        .user-input-box
          label Date
          input(type='date' name='date' placeholder="Enter today's date")
        .user-input-box
          label Time of Produce
          input(type='time' name='time' placeholder='Enter time')
        .user-input-box
          label(for='phonenumber') Phone Number
          input#phoneNumber(type='number' name='phoneNumber' placeholder="Enter dealer's phone number")
        .gender-details-box
          span.gender-title Name of Produce
          .gender-category
            select.produce(name='produce')
              option(value='')
              option(value='grainmaize') Grain Maize
              option(value='soybeans') Soy Beans
              option(value='cowpeas') Cow Peas
              option(value='gnuts') Gnuts
              option(value='beans') Beans
            br
            div
              button.submit Submit
