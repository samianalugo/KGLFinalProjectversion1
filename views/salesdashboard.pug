      li
        a(href='#')
          i.las.la-money-bill
          div Make a sale
      li
        a(href='#')
          i.las.la-money-bill
          div Produce on Credit
      li
        a(href='#')
          i.las.la-users
          div Customers
      li
        a(href='#')
          i.la-sign-out-alt
          div Logout
  .main
    .cards
      .card
        .card-content
          .number 1217
          .card-name Total Stock
        .icon-box
          i.
      .card
        .card-content
          .number 5
          .card-name Products
        .icon-box
          i.
